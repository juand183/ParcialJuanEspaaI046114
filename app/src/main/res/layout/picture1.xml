<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    cardview:cardElevation="10dp">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="#ffffffff"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">


            <TextView
                android:id="@+id/id_tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentarios (4)"
                android:textSize="17sp"
                android:textStyle="bold" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_tv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/id_tv_text"
                android:layout_marginTop="30dp"
                android:="@+id/id_tv_imag"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile2"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />


            <FrameLayout
                android:id="@+id/id_tv_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/id_tv_image"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/id_tv_image"
                android:layout_toRightOf="@+id/id_tv_image"
                android:paddingTop="5dp">

                <View
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borde" />

            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                android:layout_alignLeft="@+id/id_tv_border"
                android:layout_alignTop="@+id/id_tv_border"
                android:padding="15dp"
                android:alignment="center"
                android:paddingLeft="10dp"
                android:text="No sólo sobevivió 500 años sino que tambien ingresó..."
                android:textColor="@android:color/black"
                android:textSize="9sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_tv_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/id_tv_image"
                android:layout_marginTop="30dp"
                android:="@+id/id_tv_imag"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile2"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />


            <FrameLayout
                android:id="@+id/id_tv_border1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/id_tv_image1"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/id_tv_image"
                android:layout_toRightOf="@+id/id_tv_image"
                android:paddingTop="5dp">

                <View
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borde" />

            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                android:layout_alignLeft="@+id/id_tv_border"
                android:layout_alignTop="@+id/id_tv_border1"
                android:padding="15dp"
                android:alignment="center"
                android:paddingLeft="10dp"
                android:text="No sólo sobevivió 500 años sino que tambien ingresó..."
                android:textColor="@android:color/black"
                android:textSize="9sp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_tv_image3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/id_tv_image1"
                android:layout_marginTop="30dp"
                android:="@+id/id_tv_imag"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile2"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />


            <FrameLayout
                android:id="@+id/id_tv_border3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/id_tv_image3"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/id_tv_image"
                android:layout_toRightOf="@+id/id_tv_image"
                android:paddingTop="5dp">

                <View
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borde" />

            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                android:layout_alignLeft="@+id/id_tv_border"
                android:layout_alignTop="@+id/id_tv_border3"
                android:padding="15dp"
                android:alignment="center"
                android:paddingLeft="10dp"
                android:text="No sólo sobevivió 500 años sino que tambien ingresó..."
                android:textColor="@android:color/black"
                android:textSize="9sp"
                android:textStyle="bold" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/id_tv_image4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/id_tv_image3"
                android:layout_marginTop="30dp"
                android:="@+id/id_tv_imag"
                android:elevation="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile2"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp" />


            <FrameLayout
                android:id="@+id/id_tv_border4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/id_tv_image4"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/id_tv_image"
                android:layout_toRightOf="@+id/id_tv_image"
                android:paddingTop="5dp">

                <View
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/borde" />

            </FrameLayout>

            <TextView
                android:id="@+id/id_tv_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                android:layout_alignLeft="@+id/id_tv_border"
                android:layout_alignTop="@+id/id_tv_border4"
                android:padding="15dp"
                android:alignment="center"
                android:paddingLeft="10dp"
                android:text="No sólo sobevivió 500 años sino que tambien ingresó..."
                android:textColor="@android:color/black"
                android:textSize="9sp"
                android:textStyle="bold" />



        </RelativeLayout>


    </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>